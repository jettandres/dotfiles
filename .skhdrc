alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south

shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - k : yabai -m window --swap north
shift + alt - j : yabai -m window --swap south

alt - z : yabai -m window --toggle zoom-fullscreen
alt - space : yabai -m window --toggle split

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
ctrl + cmd - m : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

ctrl + cmd - n : yabai -m space --create
ctrl + cmd - w : yabai -m space --destroy
ctrl + cmd - h : yabai -m space --focus prev
ctrl + cmd - l : yabai -m space --focus next

ctrl + cmd + shift - h : yabai -m window --resize left:-50:0 2> /dev/null || yabai -m window --resize right:-50:0
ctrl + cmd + shift - l : yabai -m window --resize left:50:0 2> /dev/null || yabai -m window --resize right:50:0
ctrl + cmd + shift - k : yabai -m window --resize top:0:-50 2> /dev/null || yabai -m window --resize bottom:0:-50
ctrl + cmd + shift - j : yabai -m window --resize bottom:0:50 2> /dev/null || yabai -m window --resize top:0:50
