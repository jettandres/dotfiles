# load scripting addition since SIP is disabled
# https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# yabai startup config

yabai -m config layout bsp
yabai -m config window_gap 16

yabai -m config top_padding 0
yabai -m config bottom_padding 0
yabai -m config left_padding 15
yabai -m config right_padding 15

yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 1.0

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Installer$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^Canon IJ Scan Utility Lite$" manage=off
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="Postman" manage=off
yabai -m rule --add app="Insomnia" manage=off
yabai -m rule --add app="Todoist" manage=off
yabai -m rule --add app="Finder" manage=off
yabai -m rule --add app="OpenVPN*" manage=off

yabai -m rule --add app="qemu*" manage=off
yabai -m rule --add app="Android Emulator*" manage=off
yabai -m rule --add app="Flipper*" manage=off
