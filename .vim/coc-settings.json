{
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "html", "typescriptreact", "typescript"],
  "eslint.workingDirectories": ["./"],
  "eslint.lintTask.options": [".", "--ext", ".ts"],
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "html", "typescriptreact", "typescript", "go"],
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  }
}
